html,body
  height 100%
  background $bg-color
  // font-size 14PX !important

input, textarea, img, button, div
  outline none
  -webkit-appearance none

// color-*
.color-bg
  color #F7F8FA

.color-8F9CA2
  color #8F9CA2

.color-DBEEED
  color #DBEEED

.color-98CAE9
  color #98CAE9



