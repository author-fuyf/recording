.font-size-16
  font-size 16PX

.font-size-18
  font-size 18PX

.font-size-20
  font-size 20PX

.font-size-22
  font-size 22PX

.font-size-24
  font-size 24PX

.font-size-26
  font-size 26PX

.font-size-28
